<h1 class="text-center py-5">Gestión de Vendedores</h1>
<form>
  <div class="container">
    <div class="row">
      <div class="col-9">
        <div class="row g-3 align-items-center">
          <div class="col-12">
            <input type="text" value="<%= @busqueda %>" id="busqueda" name="busqueda" class="form-control" aria-labelledby="passwordHelpInline">
          </div>
        </div>
      </div>
      <div class="col-3"><button type="submit" class="btn btn-primary btn-small">CONSULTAR</button></div>
    </div>
  </div>
  <hr>
  <div class="table-responsive">
    <table class="table table-striped
    table-hover
    align-middle">
      <thead class="table-light">
        <tr>
          <th>Número Empleado</th>
          <th>Nombre</th>
          <th>Mail</th>
          <th>Oficina</th>
          <th>Manager</th>
          <th>Acción</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @vendedores.each do |vendedor| %>
          <tr class="" >
            <td scope="row"><%= vendedor.id %></td>
            <td><%= vendedor.nombre %></td>
            <td><%= vendedor.mail %></td>
            <td><%= vendedor.oficina %></td>
            <td><%= vendedor.manager %></td>
            <td><%= link_to "Ver Más", detalle_vendedor_path(vendedor.id), class: "btn btn-outline-info btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>
</form>
